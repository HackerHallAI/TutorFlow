# Application Settings
APP_NAME=TutorFlow API
APP_VERSION=0.1.0
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://tutorflow:tutorflow@localhost:5432/tutorflow
DATABASE_ECHO=false

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=tutorflow-uploads

# Email Configuration (AWS SES)
SES_FROM_EMAIL=noreply@tutorflow.com
SES_REGION=us-east-1

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Zoom Configuration
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=[".pdf", ".doc", ".docx", ".txt", ".jpg", ".jpeg", ".png", ".gif"] 